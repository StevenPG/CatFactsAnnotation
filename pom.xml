<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

    <groupId>com.stevenpg.aop</groupId>
    <artifactId>CustomAopAnnotation</artifactId>
    <version>1.0.0</version>
	<packaging>jar</packaging>

    <name>CustomAopAnnotation</name>
    <description>This project is an implementation of a spring annotation that will write logging information directly
        to stdout and stderr where applicable. This was created to have a reference point for Spring AOP Annotations and
        to make my team 'av a giggle.
    </description>
    <url>https://gitlab.com/StevenPG/customspringaopannotation</url>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Steven Gantz</name>
            <email>steven.p.gantz@gmail.com</email>
            <organization>Self</organization>
            <organizationUrl>https://gitlab.com/StevenPG</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://gitlab.com/StevenPG/customspringaopannotation.git</connection>
        <developerConnection>scm:git:git@gitlab.com:StevenPG/customspringaopannotation.git</developerConnection>
        <url>https://gitlab.com/StevenPG/customspringaopannotation</url>
    </scm>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.0.1.RELEASE</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
	</properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-aop</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>2.23.0</version>
        </dependency>
    </dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>
